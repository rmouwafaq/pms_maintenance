<odoo>
    <data>
        <record id="view_maintenance_request_done_wizard_form" model="ir.ui.view">
            <field name="name">maintenance.request.done.wizard.form</field>
            <field name="model">maintenance.request.done.wizard</field>
            <field name="arch" type="xml">
                <form string="Complete Maintenance Request">
                    <group>
                        <field name="choice"/>
                        <field name="description"/>
                    </group>
                    <footer>
                        <button string="Apply" type="object" name="apply_choice" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

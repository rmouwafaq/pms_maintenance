<odoo>
    <data>

        <record id="action_technician_view_requests" model="ir.actions.act_window">
            <field name="name">My Maintenance Requests</field>
            <field name="res_model">maintenance.request</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('user_id', '=', uid)]</field>

            <field name="context">{'search_default_user_id': uid, 'default_user_id': uid}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No maintenance requests found.
                </p>
            </field>
        </record>


        <menuitem id="menu_technician_view_requests"
                  name="My Maintenance Requests"
                  action="action_technician_view_requests"
                  parent="maintenance.menu_m_request"
                  sequence="5"/>
    </data>
</odoo>
